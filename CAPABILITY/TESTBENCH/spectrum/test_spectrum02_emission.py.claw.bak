import socket

class MCPTerminalServer:
    """MCP Terminal Server."""

    def __init__(self, port=8080):
        self.port = port
        # Initialize server with the specified port

    def start(self):
        try:
            # Attempt to create a socket and bind it to the port
            with socket.socket(socket.AF_INET, socket.SOCK_STREAM) as s:
                s.bind(('localhost', self.port))
                s.listen()
                print(f"Server started on port {self.port}")
        except PermissionError:
            print("Permission denied. Please run the script with appropriate permissions.")
        except Exception as e:
            print(f"An error occurred: {e}")

# Example usage
if __name__ == "__main__":
    server = MCPTerminalServer()
    server.start()