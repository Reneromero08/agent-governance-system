{
    "version": "1.0.0",
    "description": "Swarm configuration - defines which models fill each role",
    "roles": {
        "president": {
            "description": "Main chat orchestrator - high-level strategy and governance",
            "current_implementation": "Brains (Claude)",
            "cli": "Antigravity Chat",
            "notes": "Token-limited, delegates to Governor"
        },
        "governor": {
            "description": "CLI manager - breaks tasks into subtasks, dispatches to Ants",
