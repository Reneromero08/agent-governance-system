        },
        "ant_worker": {
            "description": "Stateless executor - follows templates, no creativity",
            "current_implementation": "Local (LFM2-2.6B-Exp)",
            "cli": "ollama run lfm2-2.6b-exp",
            "count": 2,
            "notes": "Liquid Foundation Model - SCL/Macro execution target"
        }
    },
    "alternatives": {
        "president": [
            "Claude",
            "GPT",
            "Gemini Pro"
        ],
        "governor": [
            "Gemini",
            "Claude",
            "GPT"
        ],
        "ant_worker": [
            "Grok",
            "Haiku",
            "Llama",
            "Mistral",
            "Local Ollama"
        ]
    },
    "mcp_server": {
        "host": "localhost",
