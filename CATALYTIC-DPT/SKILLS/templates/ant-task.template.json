{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ant Task Template",
    "description": "Strict task specification for Ant Workers. Ants ONLY fill placeholders.",
    "_template_version": "1.0.0",
    "_model_agnostic": true,
    "_governance": "Ants cannot modify this structure. Schema-valid or HARD FAIL.",
    "task_id": "{{TASK_ID}}",
    "ant_id": "{{ANT_ID}}",
    "task_type": "{{file_operation|code_adapt|validate|research}}",
    "file_operation": {
        "operation": "{{copy|move|read|delete}}",
        "files": [
            {
                "source": "{{SOURCE_PATH}}",
                "destination": "{{DESTINATION_PATH}}"
            }
        ],
        "verify_integrity": true
    },
    "code_adapt": {
        "file": "{{TARGET_FILE}}",
        "adaptations": [
            {
                "find": "{{PATTERN_TO_FIND}}",
                "replace": "{{REPLACEMENT_TEXT}}",
                "reason": "{{REASON}}"
            }
        ]
    },
    "validate": {
        "file": "{{TARGET_FILE}}",
        "checks": [
            "{{CHECK_1}}",
            "{{CHECK_2}}"
        ],
        "fixtures": "{{FIXTURES_PATH}}"
    },
    "governance": {
        "timeout_seconds": 60,
        "on_error": "STOP_AND_REPORT",
        "on_success": "LOG_TO_LEDGER",
        "escalate_to": "Governor",
        "ledger_path": "CONTRACTS/_runs/{{TASK_ID}}/"
    },
    "_instructions_for_ant": [
        "1. Parse this JSON exactly as given",
        "2. Fill ONLY the {{PLACEHOLDER}} values",
        "3. Do NOT modify the structure",
        "4. Execute the task_type specified",
        "5. Report result in JSON format",
        "6. If uncertain: STOP and escalate",
        "7. Schema-valid output or HARD FAIL"
    ]
}