{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ags.local/esap/alignment_map.schema.json",
  "title": "ALIGNMENT_MAP",
  "description": "The rotation matrix for cross-model alignment",
  "type": "object",
  "required": ["type", "version", "source_embedder", "target_embedder", "anchor_set_hash", "rotation_matrix", "k", "map_hash"],
  "properties": {
    "type": {
      "const": "ALIGNMENT_MAP"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "source_embedder": {
      "type": "string",
      "minLength": 1,
      "description": "Source model ID (to be rotated)"
    },
    "target_embedder": {
      "type": "string",
      "minLength": 1,
      "description": "Target (reference) model ID"
    },
    "anchor_set_hash": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$"
    },
    "rotation_matrix": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "number"
        }
      },
      "description": "k x k orthogonal rotation matrix"
    },
    "k": {
      "type": "integer",
      "minimum": 1,
      "description": "Dimensionality of rotation"
    },
    "procrustes_residual": {
      "type": "number",
      "minimum": 0,
      "description": "Frobenius norm of alignment error"
    },
    "map_hash": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$"
    },
    "computed_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
