{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ags.local/esap/spectrum_signature.schema.json",
  "title": "SPECTRUM_SIGNATURE",
  "description": "The eigenvalue spectrum - the invariant across models",
  "type": "object",
  "required": ["type", "version", "anchor_set_hash", "embedder_id", "eigenvalues", "k", "spectrum_hash"],
  "properties": {
    "type": {
      "const": "SPECTRUM_SIGNATURE"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "anchor_set_hash": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$",
      "description": "Hash of the anchor set used"
    },
    "embedder_id": {
      "type": "string",
      "minLength": 1,
      "description": "Model identifier"
    },
    "eigenvalues": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "number",
        "minimum": 0
      },
      "description": "Top k positive eigenvalues (sorted descending)"
    },
    "k": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of eigenvalues retained"
    },
    "effective_rank": {
      "type": "number",
      "minimum": 0,
      "description": "Effective rank (participation ratio)"
    },
    "spectrum_hash": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$",
      "description": "SHA-256 hash of canonical eigenvalue representation"
    },
    "computed_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
