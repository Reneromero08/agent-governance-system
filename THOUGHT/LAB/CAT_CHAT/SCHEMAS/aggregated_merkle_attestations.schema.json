{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ags.example.com/schemas/aggregated_merkle_attestations.schema.json",
  "title": "Aggregated Merkle Root Attestations",
  "description": "Container for multiple Merkle root attestations for quorum validation",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "attestations"
  ],
  "properties": {
    "attestations": {
      "type": "array",
      "description": "Array of merkle attestation objects. Must be sorted by (validator_id, public_key, build_id or '').",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "scheme",
          "merkle_root",
          "public_key",
          "signature"
        ],
        "properties": {
          "scheme": {
            "type": "string",
            "const": "ed25519",
            "description": "Signing scheme"
          },
          "merkle_root": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{64}$",
            "description": "SHA256 Merkle root hex (64 characters)"
          },
          "public_key": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{64}$",
            "description": "Ed25519 public key hex (64 characters, 32 bytes)"
          },
          "validator_id": {
            "type": "string",
            "description": "Validator identifier"
          },
          "build_id": {
            "type": "string",
            "pattern": "^(git:[a-f0-9]{7,40}|file:[a-f0-9]{16,})$",
            "description": "Deterministic build fingerprint"
          },
          "signature": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{128}$",
            "description": "Ed25519 signature hex (128 characters, 64 bytes)"
          },
          "run_id": {
            "type": "string",
            "description": "Optional run ID for reference"
          },
          "job_id": {
            "type": "string",
            "description": "Optional job ID for reference"
          },
          "bundle_id": {
            "type": "string",
            "description": "Optional bundle ID for reference"
          },
          "receipt_count": {
            "type": "integer",
            "minimum": 0,
            "description": "Optional receipt count in chain"
          },
          "receipt_chain_head_hash": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{64}$",
            "description": "Optional hash of last receipt in chain"
          }
        }
      }
    }
  }
}
