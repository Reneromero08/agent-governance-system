{
  "_comment": "Feral Daemon live config - edit while running, changes apply on next cycle",
  "startup": {
    "_comment": "Startup options - require server restart to take effect",
    "load_memories": false,
    "load_papers": false
  },
  "cache": {
    "_comment": "Performance caching settings",
    "dev_mode": true,
    "static_max_age": 86400,
    "constellation_ttl_sec": 300,
    "embedding_lru_size": 500
  },
  "behaviors": {
    "paper_exploration": {
      "enabled": true,
      "interval": 30
    },
    "memory_consolidation": {
      "enabled": true,
      "interval": 180
    },
    "self_reflection": {
      "enabled": true,
      "interval": 120
    },
    "cassette_watch": {
      "enabled": false,
      "interval": 15
    }
  },
  "consolidation_window": 10,
  "activity_log_max": 200,
  "smasher": {
    "enabled": false,
    "delay_ms": 2000,
    "batch_size": 1,
    "batch_pause_ms": 500,
    "max_chunks": 0
  },
  "debug": {
    "verbose": false,
    "log_threshold_changes": true
  },
  "ui": {
    "_comment": "UI state and slider ranges",
    "accordion": {
      "_comment": "Section collapsed states (true = collapsed)",
      "mind": false,
      "smasher": false,
      "daemon": false,
      "graph": true
    },
    "sliders": {
      "speed": {
        "min": 10,
        "max": 2000,
        "step": 1,
        "default": 2000
      },
      "batch": {
        "min": 1,
        "max": 100,
        "step": 1,
        "default": 1
      },
      "sim_threshold": {
        "min": 0.0,
        "max": 1,
        "step": 0.001,
        "default": 0.756
      },
      "fog": {
        "min": 0,
        "max": 0.002,
        "step": 0.0001,
        "default": 0.0003
      },
      "center": {
        "min": 0,
        "max": 1,
        "step": 0.01,
        "default": 0.05
      },
      "repel": {
        "min": 0,
        "max": 1000,
        "step": 1,
        "default": 120
      },
      "link_strength": {
        "min": 0,
        "max": 1,
        "step": 0.01,
        "default": 0.5
      },
      "link_distance": {
        "min": 10,
        "max": 500,
        "step": 1,
        "default": 100
      }
    }
  }
}