{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cortex Index",
  "type": "object",
  "properties": {
    "cortex_version": { "type": "string" },
    "canon_version": { "type": "string" },
    "generated_at": { "type": "string" },
    "entities": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "title": { "type": "string" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "paths": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          }
        },
        "required": ["id", "type", "paths"]
      }
    }
  },
  "required": ["cortex_version", "canon_version", "generated_at", "entities"],
  "additionalProperties": false
}